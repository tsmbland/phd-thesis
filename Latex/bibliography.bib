journal = {Developmental Cell},
keywords = {C. elegans,PAR proteins,PAR-3,PLK-1,Polarity,Printed,SiMPull,cell polarity,cortical flow,sc-SiMPull,single-cell biochemistry},
mendeley-tags = {C. elegans,PAR-3,Polarity,Printed},
number = {4},
pages = {416--434.e11},
pmid = {28829947},
title = {{A Single-Cell Biochemistry Approach Reveals PAR Complex Dynamics during Cell Polarization}},
volume = {42},
