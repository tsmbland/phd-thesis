file = {:Users/blandt/Documents/Mendeley Desktop/Arribere et al. - 2014 - Efficient Marker-Free Recovery of Custom Genetic Modifications with CRISPRCas9 in Caenorhabditis elegans.pdf:pdf},
issn = {19432631},
journal = {Genetics},
