issn = {10643745},
keywords = {Antigen purification,Cytokines,Disulfide bonded proteins,Growth factors,His-tag purification,Insoluble protein,Protein refolding,SUMO fusion protein,SenP2,SenP2 protease},
mendeley-tags = {SenP2},
pages = {141--154},
